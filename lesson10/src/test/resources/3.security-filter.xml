	<ss:ldap-server root="dc=example,dc=org" url="ldap://localhost:389" id="ldapserver" />
	<ss:authentication-manager id="ldap">
		<ss:ldap-authentication-provider
			user-dn-pattern="uid={0},ou=people" group-search-base="ou=groups" server-ref="ldapserver"/>
	</ss:authentication-manager>
	</spring:beans>


	<mule-ss:security-manager>
		<mule-ss:delegate-security-provider	name="mule-user-service-provider" delegate-ref="ldap" />
	</mule-ss:security-manager>

	<flow name="authenticatedHttp">
		<inbound-endpoint address="http://localhost:8081/secure" doc:name="Generic">
			<mule-ss:http-security-filter realm="true"/>
		</inbound-endpoint>
		<logger message="User logged in" level="INFO" category="&#30331;&#24405;&#25552;&#31034;&#65306;&#65306;&#65306;&#65306;&#65306;&#65306;&#65306;&#65306;&#65306;&#65306;&#65306;&#65306;&#65306;&#65306;&#65306;&#65306;&#65306;&#65306;&#65306;&#65306;&#65306;" doc:name="Logger"/>
	</flow>

